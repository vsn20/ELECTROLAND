<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Login</title>
    <style>
        body {
            min-height: 100vh;
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .auth-container {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 400px;
            margin: auto;
        }

        h2 {
            margin-bottom: 20px;
        }

        input, button {
            display: block;
            width: 100%;
            margin: 10px 0;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background: linear-gradient(135deg, #34495E, #2C3E50);
            color: white;
            font-size: 16px;
            cursor: pointer;
            border: none;
            transition: background 0.3s ease-in-out;
        }

        button:hover {
            background: linear-gradient(to right, rgb(66, 32, 70), rgb(30, 26, 71), rgb(77, 38, 44), #155217, #2E8B57);
        }

        .clicked {
            background: linear-gradient(to left, #2E8B57, #155217, rgb(77, 38, 44), rgb(30, 26, 71), rgb(66, 32, 70)) !important;
        }

        .link-container {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .link-container a {
            text-decoration: none;
            color: #007bff;
            font-size: 14px;
        }

        footer {
            margin-top: auto;
        }

        .error-message {
            color: #ff0000;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="auth-container">
        <h2>Employee Login</h2>
        <% if (error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>
        <form id="employeeForm" action="/loginvalidation" method="POST">
            <label for="employeeEmail">Email:</label>
            <input type="email" id="employeeEmail" name="email" placeholder="Enter your email" required>

            <label for="employeePassword">Password:</label>
            <input type="password" id="employeePassword" name="password" placeholder="Enter password" required>

            <button type="submit">Login</button>

            <div class="link-container">
                <a href="/signup">Don't have an account? Sign Up</a>
                <a href="/forgot-password">Forgot Password?</a>
            </div>
        </form>
    </div>

    <%- include('partials/footer') %>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const employeeForm = document.getElementById("employeeForm");

            // Handle button click animation
            document.querySelectorAll("button").forEach(button => {
                button.addEventListener("click", function () {
                    this.classList.add("clicked");
                    setTimeout(() => this.classList.remove("clicked"), 500);
                });
            });
        });
    </script>
</body>
</html>