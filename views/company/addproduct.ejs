<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Form</title>
    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(45deg, #ff7e5f, #feb47b, #86a8e7, #7f7fd5);
            background-size: 400% 400%;
            animation: gradientBG 10s ease infinite;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .form-container {
            background: rgba(255, 255, 255, 0.9); /* Semi-transparent white */
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 750px;
            backdrop-filter: blur(10px); /* Adds a blur effect */
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #2c3e50;
            font-size: 24px;
            font-weight: 600;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 8px;
            font-weight: 500;
            color: #34495e;
            font-size: 14px;
        }

        input[type="text"],
        input[type="number"],
        select,
        textarea,
        input[type="file"] {
            width: 100%;
            padding: 10px;
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: 6px;
            font-size: 14px;
            box-sizing: border-box;
            background: rgba(255, 255, 255, 0.8);
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        input[type="text"]:focus,
        input[type="number"]:focus,
        select:focus,
        textarea:focus,
        input[type="file"]:focus {
            border-color: #3498db;
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
            outline: none;
        }

        .radio-group {
            display: flex;
            gap: 20px;
            margin-bottom: 10px;
        }

        .radio-group label {
            font-weight: 400;
            color: #34495e;
            font-size: 14px;
        }

        .hidden {
            display: none;
        }

        button {
            grid-column: span 2;
            width: 100%;
            padding: 12px;
            background-color: #1497ee;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #2980b9;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        /* File Upload Styling */
        input[type="file"] {
            padding: 8px;
        }

        small {
            font-size: 12px;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Product Details Form</h2>
        <form action="#" method="post" enctype="multipart/form-data">
            <div class="form-grid">
                <!-- Product Type -->
                <div class="form-group">
                    <label for="product-type">Product Type</label>
                    <select id="product-type" name="product-type" required>
                        <option value="">Select Product Type</option>
                        <option value="electronics">Electronics</option>
                        <option value="furniture">Furniture</option>
                        <option value="appliances">Appliances</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <!-- Model Number -->
                <div class="form-group">
                    <label for="model-number">Model Number</label>
                    <input type="text" id="model-number" name="model-number" required>
                </div>

                <!-- Selling Price -->
                <div class="form-group">
                    <label for="selling-price">Selling Price (₹)</label>
                    <input type="number" id="selling-price" name="selling-price" required>
                </div>

                <!-- Weight -->
                <div class="form-group">
                    <label for="weight">Weight of Product (grams)</label>
                    <input type="number" id="weight" name="weight" required>
                </div>

                <!-- Installation -->
                <div class="form-group" style="grid-column: span 2;">
                    <label>Installation Required?</label>
                    <div class="radio-group">
                        <label><input type="radio" name="installation" value="yes" id="installation-yes" required> Yes</label>
                        <label><input type="radio" name="installation" value="no" id="installation-no" required> No</label>
                    </div>
                    <div id="installation-details" class="hidden">
                        <label>Installation Type</label>
                        <div class="radio-group">
                            <label><input type="radio" name="installation-type" value="paid" id="installation-paid" required> Paid</label>
                            <label><input type="radio" name="installation-type" value="unpaid" id="installation-unpaid" required> Unpaid</label>
                        </div>
                        <div id="installation-price-details" class="hidden">
                            <label for="installation-price">Installation Price (₹)</label>
                            <input type="number" id="installation-price" name="installation-price" required>
                        </div>
                    </div>
                </div>

                <!-- Warranty -->
                <div class="form-group" style="grid-column: span 2;">
                    <label>Warranty Available?</label>
                    <div class="radio-group">
                        <label><input type="radio" name="warranty" value="yes" id="warranty-yes" required> Yes</label>
                        <label><input type="radio" name="warranty" value="no" id="warranty-no" required> No</label>
                    </div>
                    <div id="warranty-details" class="hidden">
                        <label for="warranty-months">Warranty Duration (Months)</label>
                        <input type="number" id="warranty-months" name="warranty-months" required>
                    </div>
                </div>

                <!-- Upload Product Photos -->
                <div class="form-group" style="grid-column: span 2;">
                    <label for="product-photos">Upload Product Photos (2-3 photos)</label>
                    <input type="file" id="product-photos" name="product-photos[]" accept="image/*" multiple required>
                    <small>You can upload up to 3 photos.</small>
                </div>

                <!-- Description -->
                <div class="form-group" style="grid-column: span 2;">
                    <label for="description">Product Description</label>
                    <textarea id="description" name="description" rows="4" required></textarea>
                </div>

                <!-- Submit Button -->
                <div class="form-group" style="grid-column: span 2;">
                    <button type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        // Show/hide installation details
        document.getElementById('installation-yes').addEventListener('change', function() {
            document.getElementById('installation-details').classList.toggle('hidden', !this.checked);
            document.getElementById('installation-price-details').classList.add('hidden'); // Reset price field
        });
        document.getElementById('installation-no').addEventListener('change', function() {
            document.getElementById('installation-details').classList.add('hidden');
            document.getElementById('installation-price-details').classList.add('hidden'); // Reset price field
        });

        // Show/hide installation price details
        document.getElementById('installation-paid').addEventListener('change', function() {
            document.getElementById('installation-price-details').classList.toggle('hidden', !this.checked);
        });
        document.getElementById('installation-unpaid').addEventListener('change', function() {
            document.getElementById('installation-price-details').classList.add('hidden');
        });

        // Show/hide warranty details
        document.getElementById('warranty-yes').addEventListener('change', function() {
            document.getElementById('warranty-details').classList.toggle('hidden', !this.checked);
        });
        document.getElementById('warranty-no').addEventListener('change', function() {
            document.getElementById('warranty-details').classList.add('hidden');
        });

        // Limit file uploads to 3 photos
        document.getElementById('product-photos').addEventListener('change', function() {
            if (this.files.length > 3) {
                alert("You can upload a maximum of 3 photos.");
                this.value = ""; // Clear the input
            }
        });
    </script>
</body>
</html>