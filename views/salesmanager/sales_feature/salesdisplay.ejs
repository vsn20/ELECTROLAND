<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Display - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 40px;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .add-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #333333;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
      font-size: 0.9rem;
      white-space: nowrap;
    }

    .add-button:hover {
      background-color: #555555;
    }

    .scrollable-table {
      width: 100%;
      max-height: 400px; /* Fixed height for scrolling */
      overflow-y: auto;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    .scrollable-table th,
    .scrollable-table td {
      padding: 10px;
      text-align: left;
      border: 1px solid #ddd;
    }

    .scrollable-table th {
      background-color: #f2f2f2;
      position: sticky;
      top: 0;
    }

    .scrollable-table tr {
      cursor: pointer;
    }

    .scrollable-table tr:hover {
      background-color: #e9ecef;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 20px;
      }

      .content-area {
        min-height: auto;
      }

      .header-container {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }

      .add-button {
        margin-top: 5px;
        width: 100%;
        text-align: center;
        padding: 8px;
        font-size: 0.85rem;
      }

      .scrollable-table {
        max-height: 300px;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/salesmanager_sidebar') %>

    <div class="content-area" id="content">
      <div class="header-container">
        <h1>Sales</h1>
        <a href="/salesmanager/add-sale" class="add-button">Add Sale</a>
      </div>
      <div class="scrollable-table">
        <table>
          <thead>
            <tr>
              <th>Sale ID</th>
              <th>Salesman</th>
              <th>Customer</th>
              <th>Total Amount</th>
              <th>Sale Date</th>
            </tr>
          </thead>
          <tbody>
            <% sales.forEach(sale => { %>
              <tr onclick="window.location.href='/salesmanager/sales/<%= sale.sales_id %>'">
                <td><%= sale.sales_id %></td>
                <td><%= sale.salesman_name %></td>
                <td><%= sale.customer_name %></td>
                <td><%= sale.total_amount %></td>
                <td><%= sale.saledate %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>
</body>
</html>