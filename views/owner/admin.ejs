<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard Pro</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
    }

    /* Navbar Styles */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 60px;
      background: #ffffff;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 40px;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }

    .nav-left {
      display: flex;
      align-items: center;
      gap: 25px;
    }

    .welcome-text {
      font-size: 1.4rem;
      color: #2d3436;
      font-weight: 600;
    }

    .datetime-container {
      display: flex;
      flex-direction: column;
      gap: 2px;
      color: #636e72;
      font-size: 0.9rem;
    }

    .current-date {
      font-weight: 500;
    }

    .current-time {
      font-weight: 600;
      color: #6c5ce7;
    }

    .nav-right {
      display: flex;
      align-items: center;
      gap: 25px;
    }

    .profile-section {
      display: flex;
      align-items: center;
      gap: 15px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .profile-pic {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #6c5ce7;
    }

    .notification-bell {
      font-size: 1.3rem;
      color: #636e72;
      position: relative;
      transition: transform 0.2s ease;
    }

    .notification-bell:hover {
      transform: scale(1.1);
      color: #6c5ce7;
    }

    /* Main Container */
    .container {
      margin-top: 80px;
      display: grid;
      grid-template-columns: 250px 1fr;
      gap: 25px;
      padding: 0 40px;
    }

    /* Sidebar Styles */
    .sidebar {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      height: calc(100vh - 100px);
      position: sticky;
      top: 80px;
    }

    .sidebar h2 {
      font-size: 1.3rem;
      color: #2d3436;
      margin-bottom: 30px;
      padding-bottom: 15px;
      border-bottom: 2px solid #f1f2f6;
    }

    .features {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .feature-item {
      display: flex;
      align-items: center;
      gap: 15px;
      padding: 14px;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      text-decoration: none;
      color: #2d3436;
    }

    .feature-item:hover {
      background: #6c5ce710;
      transform: translateX(5px);
    }

    .feature-item.active {
      background: #6c5ce715;
      border-left: 4px solid #6c5ce7;
    }

    .feature-icon {
      font-size: 1.4rem;
      width: 30px;
      text-align: center;
    }

    .feature-title {
      font-weight: 500;
      font-size: 1rem;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="nav-left">
      <span class="welcome-text">Welcome Admin üëã</span>
      <div class="datetime-container">
        <div class="current-date">December 25, 2023</div>
        <div class="current-time">10:30:45 AM</div>
      </div>
    </div>
    <div class="nav-right">
      <div class="notification-bell">üîî</div>
      <div class="profile-section">
        <img src="https://via.placeholder.com/40" alt="Profile" class="profile-pic">
      </div>
    </div>
  </nav>

  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h2>Dashboard Menu</h2>
      <div class="features">
        <a href="#" class="feature-item active">
          <span class="feature-icon">üìä</span>
          <span class="feature-title">Sales Analytics</span>
        </a>
        <a href="#" class="feature-item">
          <span class="feature-icon">üì¶</span>
          <span class="feature-title">Inventory Management</span>
        </a>
        <a href="/admin/addsalesmanager" class="feature-item">
          <span class="feature-icon">üë•</span>
          <span class="feature-title">sales manager appointment</span>
        </a>
        <a href="#" class="feature-item">
          <span class="feature-icon">üìà</span>
          <span class="feature-title">Reports</span>
        </a>
        <a href="#" class="feature-item">
          <span class="feature-icon">‚öôÔ∏è</span>
          <span class="feature-title">Settings</span>
        </a>
      </div>
    </div>
  </div>

  <script>
    function updateDateTime() {
      const options = { 
        month: 'long', 
        day: 'numeric', 
        year: 'numeric' 
      };
      
      const dateElement = document.querySelector('.current-date');
      const timeElement = document.querySelector('.current-time');
      const now = new Date();
      
      dateElement.textContent = now.toLocaleDateString('en-US', options);
      timeElement.textContent = now.toLocaleTimeString('en-US', { 
        hour: '2-digit', 
        minute: '2-digit', 
        second: '2-digit' 
      });
    }

    // Initial call and set interval
    updateDateTime();
    setInterval(updateDateTime, 1000);
  </script>
</body>
</html>