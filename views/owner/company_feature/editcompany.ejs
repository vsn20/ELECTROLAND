<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Company - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <h1>Edit Company</h1>
      <% if (company) { %>
        <form action="/admin/company/edit/<%= company.cid %>" method="POST" onsubmit="return validateForm()">
          <fieldset class="form-section">
            <legend class="section-title">Company Information</legend>
            <div class="field-group">
              <div>
                <label for="branch-id" class="field-label">Company ID</label>
                <input type="text" id="branch-id" name="cid" value="<%= company.cid %>" class="field-input disabled-field" readonly>
              </div>
              <div>
                <label for="branch-name" class="field-label">Company Name</label>
                <input type="text" id="branch-name" name="cname" value="<%= company.cname %>" class="field-input" required>
              </div>
              <div>
                <label for="manager-email" class="field-label">Company Email</label>
                <input type="email" id="manager-email" name="email" value="<%= company.email %>" class="field-input" required>
              </div>
              <div>
                <label for="manager-phone" class="field-label">Company Phone</label>
                <input type="tel" id="manager-phone" name="phone" value="<%= company.phone %>" class="field-input" pattern="[0-9]{10}" required>
              </div>
              <div>
                <label for="address" class="field-label">Address</label>
                <textarea id="address" name="address" class="field-textarea" required><%= company.address %></textarea>
              </div>
              <div>
                <label class="field-label">Active</label>
                <div class="radio-group">
                  <input type="radio" id="active" name="active" value="active" <%= company.active === 'active' ? 'checked' : '' %> required>
                  <label for="active">Active</label>
                  <input type="radio" id="inactive" name="active" value="inactive" <%= company.active === 'inactive' ? 'checked' : '' %>>
                  <label for="inactive">Inactive</label>
                </div>
              </div>
            </div>
          </fieldset>
          <div id="error-message"></div>
          <button type="submit" class="form-btn">Update Company</button>
        </form>
      <% } else { %>
        <p>Company not found.</p>
      <% } %>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    function validateForm() {
      const phoneInput = document.getElementById('manager-phone');
      const errorMessage = document.getElementById('error-message');
      const phonePattern = /^[0-9]{10}$/;

      phoneInput.classList.remove('error');
      errorMessage.textContent = '';

      if (!phonePattern.test(phoneInput.value)) {
        phoneInput.classList.add('error');
        errorMessage.textContent = 'Please enter a valid 10-digit phone number.';
        return false;
      }
      return true;
    }

    const phoneInput = document.getElementById('manager-phone');
    phoneInput.addEventListener('input', function () {
      const errorMessage = document.getElementById('error-message');
      const phonePattern = /^[0-9]{10}$/;
      if (this.value.length > 10) {
        this.value = this.value.slice(0, 10);
      }
      if (this.value && !phonePattern.test(this.value)) {
        this.classList.add('error');
        errorMessage.textContent = 'Please enter exactly 10 digits.';
      } else {
        this.classList.remove('error');
        errorMessage.textContent = '';
      }
    });
  </script>
</body>
</html>