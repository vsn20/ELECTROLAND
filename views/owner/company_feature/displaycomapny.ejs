<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Page-specific styles */
    .clickable-btn {
      background: none;
      border: none;
      color: inherit;
      text-decoration: none;
      cursor: pointer;
      padding: 0;
      font-size: inherit;
      width: 100%;
      text-align: left;
    }

    .clickable-btn:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .clickable-btn {
        text-align: right;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>
    
    <!-- Content Area -->
    <div class="content-area" id="content">
      <div class="header-container">
        <h1>Registered Companies</h1>
        <a href="/admin/addcompanie" class="add-button">add-company</a>
      </div>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Company ID</th>
              <th>Company Name</th>
              <th>Company Email</th>
              <th>Company Phone</th>
              <th>Active</th>
              <th>Company Address</th>
            </tr>
          </thead>
          <tbody>
            <% companies.forEach(branch => { %>
              <tr>
                <td data-label="Company ID"><button class="clickable-btn" data-bid="<%= branch.cid %>"><%= branch.cid %></button></td>
                <td data-label="Company Name"><button class="clickable-btn" data-bid="<%= branch.cid %>"><%= branch.cname %></button></td>
                <td data-label="Company Email"><button class="clickable-btn" data-bid="<%= branch.cid %>"><%= branch.email %></button></td>
                <td data-label="Company Phone"><button class="clickable-btn" data-bid="<%= branch.cid %>"><%= branch.phone %></button></td>
                <td data-label="Active"><button class="clickable-btn" data-bid="<%= branch.cid %>"><%= branch.active %></button></td>
                <td data-label="Company Address"><button class="clickable-btn" data-bid="<%= branch.cid %>"><%= branch.address %></button></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    document.querySelectorAll('.clickable-btn').forEach(button => {
      button.addEventListener('click', () => {
        const bid = button.getAttribute('data-bid');
        window.location.href = `/admin/company/edit/${bid}`;
      });
    });
  </script>
</body>
</html>