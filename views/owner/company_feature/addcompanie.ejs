<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Page-specific styles */
    .form-container h2 {
      text-align: center;
    }

    .forgot-password {
      margin-top: 1em; /* 16px / 16px = 1em */
      text-align: center;
    }

    .forgot-password a {
      color: #2d3436;
      text-decoration: none;
    }

    .forgot-password a:hover {
      color: #636e72;
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <div class="form-container">
        <h2>Company Details</h2>
        <form id="company-details-form" action="/submit-company" method="POST" class="form-container">
          <fieldset class="form-section">
            <legend class="section-title">Company Information</legend>
            <div class="field-group">
              <div>
                <label for="company-name" class="field-label">Company Name</label>
                <input type="text" id="company-name" name="company-name" class="field-input" required placeholder="Enter company name">
              </div>
              <div>
                <label for="email" class="field-label">Company Email</label>
                <input type="email" id="email" name="email" class="field-input" required placeholder="Enter email">
              </div>
              <div>
                <label for="phone" class="field-label">Company Phone</label>
                <input type="tel" id="phone" name="phone" class="field-input" required placeholder="Enter phone number" pattern="[0-9]{10}">
              </div>
              <div>
                <label for="address" class="field-label">Company Address</label>
                <textarea id="address" name="address" class="field-textarea" required placeholder="Enter company address"></textarea>
              </div>
              <div>
                <label class="field-label">Active</label>
                <div class="radio-group">
                  <input type="radio" id="in-stock" name="active" value="active" required>
                  <label for="in-stock">Active</label>
                  <input type="radio" id="out-of-stock" name="active" value="inactive">
                  <label for="out-of-stock">Inactive</label>
                </div>
              </div>
            </div>
          </fieldset>

          <div id="error-message"></div>
          <button type="submit" class="form-btn">Submit Company</button>
        </form>
        <div class="forgot-password">
          <a href="/companies">Back to Companies</a>
        </div>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    const form = document.getElementById('company-details-form');
    const email = document.getElementById('email');
    const phone = document.getElementById('phone');
    const errorMessage = document.getElementById('error-message');

    form.addEventListener('submit', function(event) {
      email.classList.remove('error');
      phone.classList.remove('error');
      errorMessage.textContent = '';

      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailPattern.test(email.value)) {
        event.preventDefault();
        email.classList.add('error');
        errorMessage.textContent = 'Please enter a valid email address.';
        return;
      }

      const phonePattern = /^[0-9]{10}$/;
      if (!phonePattern.test(phone.value)) {
        event.preventDefault();
        phone.classList.add('error');
        errorMessage.textContent = 'Please enter a valid 10-digit phone number.';
        return;
      }
    });
  </script>
</body>
</html>