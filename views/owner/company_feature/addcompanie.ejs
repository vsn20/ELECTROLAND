<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Structural CSS */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px; /* Standardized gap */
      padding: 0 20px; /* Standardized padding to prevent sidebar shift */
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 20px; /* Standardized padding */
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); /* Standardized shadow */
      flex: 1;
      overflow-x: auto; /* Added for consistency */
    }

    .content-area h1, .content-area h2 {
      color: #2d3436;
      margin-bottom: 20px; /* Standardized margin */
      font-size: 1.5rem; /* Standardized font size */
    }

    .content-area p {
      color: #636e72;
      line-height: 1.6;
      font-size: 0.9rem; /* Added for consistency */
    }

    /* Form-specific styles */
    .form-container {
      max-width: 600px; /* Added for better form readability */
      margin: 0 auto; /* Center the form */
    }

    fieldset {
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      padding: 15px;
      margin-bottom: 20px;
    }

    legend {
      color: #2d3436;
      font-weight: bold;
      padding: 0 10px;
    }

    .field-group {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }

    .field-group > div {
      flex: 1 1 45%; /* Two columns by default */
      min-width: 200px; /* Ensure fields don't get too narrow */
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
      font-weight: 500;
    }

    input[type="text"],
    input[type="email"],
    input[type="tel"],
    textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      font-size: 0.9rem;
      background: #fff;
      transition: border-color 0.3s;
    }

    textarea {
      height: 100px;
      resize: vertical;
    }

    input:focus,
    textarea:focus {
      border-color: #333333;
      outline: none;
    }

    .radio-group {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .radio-group label {
      margin-bottom: 0;
      font-weight: 500;
    }

    button[type="submit"] {
      display: inline-block;
      padding: 10px 20px;
      background-color: #333333;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button[type="submit"]:hover {
      background-color: #555555;
    }

    .forgot-password {
      margin-top: 15px;
      text-align: center;
    }

    .forgot-password a {
      color: #2d3436;
      text-decoration: none;
      font-size: 0.9rem;
    }

    .forgot-password a:hover {
      text-decoration: underline;
    }

    /* Error styling for form validation */
    .error {
      border-color: #e74c3c !important;
      background-color: #ffe6e6 !important;
    }

    #error-message {
      color: #e74c3c;
      font-size: 0.85rem;
      margin: 10px 0;
      text-align: center;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 10px; /* Consistent responsive padding */
      }

      .content-area {
        padding: 15px;
      }

      .content-area h1, .content-area h2 {
        font-size: 1.2rem;
      }

      .field-group > div {
        flex: 1 1 100%; /* Stack fields on smaller screens */
      }

      button[type="submit"] {
        width: 100%;
        padding: 8px;
        font-size: 0.85rem;
      }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
      .content-area h1, .content-area h2 {
        font-size: 1.3rem;
      }

      .field-group > div {
        flex: 1 1 45%;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <div class="form-container">
        <h2>Company Details</h2>
        <form id="company-details-form" action="/submit-company" method="POST" class="form-container">
          <fieldset>
            <legend>Company Information</legend>
            <div class="field-group">
              <div>
                <label for="company-name">Company Name</label>
                <input type="text" id="company-name" name="company-name" required placeholder="Enter company name">
              </div>
              <div>
                <label for="email">Company Email</label>
                <input type="email" id="email" name="email" required placeholder="Enter email">
              </div>
              <div>
                <label for="phone">Company Phone</label>
                <input type="tel" id="phone" name="phone" required placeholder="Enter phone number" pattern="[0-9]{10}">
              </div>
              <div>
                <label for="address">Company Address</label>
                <textarea id="address" name="address" required placeholder="Enter company address"></textarea>
              </div>
              <div>
                <label>Active</label>
                <div class="radio-group">
                  <input type="radio" id="in-stock" name="active" value="active" required>
                  <label for="in-stock">Active</label>
                  <input type="radio" id="out-of-stock" name="active" value="inactive">
                  <label for="out-of-stock">Inactive</label>
                </div>
              </div>
            </div>
          </fieldset>

          <div id="error-message"></div>
          <button type="submit">Submit Company</button>
        </form>
        <div class="forgot-password">
          <a href="/companies">Back to Companies</a>
        </div>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    const form = document.getElementById('company-details-form');
    const email = document.getElementById('email');
    const phone = document.getElementById('phone');
    const errorMessage = document.getElementById('error-message');

    form.addEventListener('submit', function(event) {
      email.classList.remove('error');
      phone.classList.remove('error');
      errorMessage.textContent = '';

      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailPattern.test(email.value)) {
        event.preventDefault();
        email.classList.add('error');
        errorMessage.textContent = 'Please enter a valid email address.';
        return;
      }

      const phonePattern = /^[0-9]{10}$/;
      if (!phonePattern.test(phone.value)) {
        event.preventDefault();
        phone.classList.add('error');
        errorMessage.textContent = 'Please enter a valid 10-digit phone number.';
        return;
      }
    });
  </script>
</body>
</html>