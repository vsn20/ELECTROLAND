<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Page-specific styles */
    .table-wrapper {
      -ms-overflow-style: none; /* Hide scrollbar in IE/Edge */
      scrollbar-width: none; /* Hide scrollbar in Firefox */
    }

    .table-wrapper::-webkit-scrollbar {
      display: none; /* Hide scrollbar in Webkit browsers */
    }

    table {
      min-width: 43.75em; /* 700px / 16px = 43.75em */
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>
    
    <!-- Content Area -->
    <div class="content-area" id="content">
      <div class="header-container">
        <h1>Inventory</h1>
      </div>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Branch ID</th>
              <th>Branch Name</th>
              <th>Product ID</th>
              <th>Product Name</th>
              <th>Company Name</th>
              <th>Model No</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% stocks.forEach(s => { %>
              <tr>
                <td data-label="Branch ID"><%= s.bid %></td>
                <td data-label="Branch Name"><%= s.bname %></td>
                <td data-label="Product ID"><%= s.pid %></td>
                <td data-label="Product Name"><%= s.pname %></td>
                <td data-label="Company Name"><%= s.cname %></td>
                <td data-label="Model No"><%= s.modelno %></td>
                <td data-label="Quantity"><%= s.quantity %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>
</body>
</html>