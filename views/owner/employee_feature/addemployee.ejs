<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Your existing CSS remains unchanged */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px !important; /* Standardized padding with !important to prevent override */
      max-width: 100%;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
    }

    .content-area p {
      color: #636e72;
      line-height: 1.6;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 20px;
      }
      .content-area {
        min-height: auto;
      }
    }

    /* Add error message styling */
    #error-message {
      color: #e74c3c;
      margin: 10px 0;
      min-height: 20px;
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <div class="content-area" id="content">
      <div class="form-container">
        <h2>Add Employee</h2>
        <form id="employee-login-form" action="/admin/addemployee" method="POST">
          <!-- Personal Details Section -->
          <fieldset>
            <legend>Personal Details</legend>
            <div class="field-group">
              <div>
                <label for="f_name">First Name</label>
                <input type="text" id="f_name" name="f_name" required placeholder="Enter first name">
              </div>
              <div>
                <label for="last_name">Last Name</label>
                <input type="text" id="last_name" name="last_name" required placeholder="Enter last name">
              </div>
              <div>
                <label for="role">Role</label>
                <select id="role" name="role" required>
                  <option value="" disabled selected>Select role</option>
                  <option value="Sales Manager">Sales Manager</option>
                  <option value="Salesman">Salesman</option>
                </select>
              </div>
              <div>
                <label for="bid">Branch</label>
                <select id="bid" name="bid" required>
                  <option value="" disabled selected>Select branch</option>
                  <option value="B001">B001 - North Branch</option>
                  <option value="B002">B002 - South Branch</option>
                  <option value="B003">B003 - East Branch</option>
                  <option value="B004">B004 - West Branch</option>
                  <option value="null">Not Assigned</option>
                </select>
              </div>
              <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required placeholder="Enter email">
              </div>
              <div>
                <label for="phone_no">Phone Number</label>
                <input type="tel" id="phone_no" name="phone_no" required placeholder="Enter phone number" pattern="[0-9]{10}">
              </div>
            </div>
          </fieldset>

          <!-- Account and Salaries Section -->
          <fieldset>
            <legend>Account and Salaries</legend>
            <div class="field-group">
              <div>
                <label for="acno">Account Number</label>
                <input type="text" id="acno" name="acno" required placeholder="Enter account number">
              </div>
              <div>
                <label for="ifsc">IFSC Code</label>
                <input type="text" id="ifsc" name="ifsc" required placeholder="Enter IFSC code">
              </div>
              <div>
                <label for="bankname">Bank Name</label>
                <input type="text" id="bankname" name="bankname" required placeholder="Enter bank name">
              </div>
              <div>
                <label for="base_salary">Monthly Salary</label>
                <input type="number" id="base_salary" name="base_salary" required placeholder="Enter monthly salary" step="0.01">
              </div>
              <div>
                <label for="address">Address</label>
                <textarea id="address" name="address" required placeholder="Enter address"></textarea>
              </div>
            </div>
          </fieldset>

          <div id="error-message"></div>
          <button type="submit">Add Employee</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    const form = document.getElementById('employee-login-form');
    const email = document.getElementById('email');
    const phone = document.getElementById('phone_no');
    const errorMessage = document.getElementById('error-message');

    form.addEventListener('submit', async function(event) {
      event.preventDefault(); // Prevent default form submission

      // Reset styles
      email.style.borderColor = '#ddd';
      email.style.backgroundColor = '#f9f9f9';
      phone.style.borderColor = '#ddd';
      phone.style.backgroundColor = '#f9f9f9';
      errorMessage.textContent = '';

      // Client-side validation
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailPattern.test(email.value)) {
        email.style.borderColor = '#e74c3c';
        email.style.backgroundColor = '#fff5f5';
        errorMessage.textContent = 'Please enter a valid email address.';
        return;
      }

      const phonePattern = /^[0-9]{10}$/;
      if (!phonePattern.test(phone.value)) {
        phone.style.borderColor = '#e74c3c';
        phone.style.backgroundColor = '#fff5f5';
        errorMessage.textContent = 'Please enter a valid 10-digit phone number.';
        return;
      }

      // Prepare form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      console.log('Form Data:', data)

      try {
        const response = await fetch('/admin/addemployee', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        const result = await response.json();

        if (result.success) {
          // Redirect to the URL provided by the server
          window.location.href = result.redirect;
        } else {
          errorMessage.textContent = result.message || 'An error occurred while adding the employee.';
        }
      } catch (error) {
        errorMessage.textContent = 'Network error: ' + error.message;
      }
    });
  </script>
</body>
</html>