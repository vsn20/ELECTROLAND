<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <link rel="stylesheet" href="styles.css"> <!-- Assuming this is in public and linked -->
  <style>
    /* Structural CSS only for homepage */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px; /* Matches navbar height assumption */
      display: flex; /* Flex for side-by-side layout */
      flex: 1; /* Ensures container grows to push footer down */
      gap: 25px;
      padding: 0 40px;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1; /* Takes remaining space */
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
    }

    .content-area p {
      color: #636e72;
      line-height: 1.6;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 20px;
      }

      .content-area {
        min-height: auto;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <div class="form-wrapper">
        <h2 class="form-title">Employee Login</h2>
        <form id="employee-login-form" action="dashboard.html" method="POST">
          <!-- Personal Details Section -->
          <fieldset class="form-section">
            <legend class="section-title">Personal Details</legend>
            <div class="flex-container">
              <div class="col-3">
                <label for="employee-id" class="field-label">Employee ID</label>
                <input type="text" id="employee-id" name="employee-id" class="field-input" required placeholder="Enter your Employee ID">
              </div>
              <div class="col-3">
                <label for="fname" class="field-label">First Name</label>
                <input type="text" id="fname" name="fname" class="field-input" required placeholder="Enter your first name">
              </div>
              <div class="col-3">
                <label for="lname" class="field-label">Last Name</label>
                <input type="text" id="lname" name="lname" class="field-input" required placeholder="Enter your last name">
              </div>
              <div class="col-3">
                <label for="role" class="field-label">Role</label>
                <select id="role" name="role" class="field-select" required>
                  <option value="" disabled selected>Select your role</option>
                  <option value="sales-manager">Sales Manager</option>
                  <option value="salesman">Salesman</option>
                </select>
              </div>
              <div class="col-3">
                <label for="status" class="field-label">Status</label>
                <select id="status" name="status" class="field-select" required>
                  <option value="" disabled selected>Select status</option>
                  <option value="active">Active</option>
                  <option value="resigned">Resigned</option>
                </select>
              </div>
              <div class="col-3">
                <label for="branch-name" class="field-label">Branch Name</label>
                <select id="branch-name" name="branch-name" class="field-select" required>
                  <option value="" disabled selected>Select branch</option>
                  <option value="north">North Branch</option>
                  <option value="south">South Branch</option>
                  <option value="east">East Branch</option>
                  <option value="west">West Branch</option>
                </select>
              </div>
              <div class="col-3">
                <label for="email" class="field-label">Email</label>
                <input type="email" id="email" name="email" class="field-input" required placeholder="Enter your email">
              </div>
              <div class="col-3">
                <label for="phone" class="field-label">Phone Number</label>
                <input type="tel" id="phone" name="phone" class="field-input" required placeholder="Enter your phone number" pattern="[0-9]{10}">
              </div>
            </div>
          </fieldset>

          <!-- Account and Salaries Section -->
          <fieldset class="form-section">
            <legend class="section-title">Account and Salaries</legend>
            <div class="flex-container">
              <div class="col-3">
                <label for="reg-date" class="field-label">Registration Date</label>
                <input type="date" id="reg-date" name="reg-date" class="field-input" required>
              </div>
              <div class="col-3">
                <label for="account-number" class="field-label">Account Number</label>
                <input type="text" id="account-number" name="account-number" class="field-input" required placeholder="Enter account number">
              </div>
              <div class="col-3">
                <label for="ifsc-code" class="field-label">IFSC Code</label>
                <input type="text" id="ifsc-code" name="ifsc-code" class="field-input" required placeholder="Enter IFSC code">
              </div>
              <div class="col-3">
                <label for="bank" class="field-label">Bank</label>
                <input type="text" id="bank" name="bank" class="field-input" required placeholder="Enter bank name">
              </div>
              <div class="col-3">
                <label for="hire-date" class="field-label">Hire Date</label>
                <input type="date" id="hire-date" name="hire-date" class="field-input" required>
              </div>
              <div class="col-3">
                <label for="salary" class="field-label">Monthly Salary</label>
                <input type="number" id="salary" name="salary" class="field-input" required placeholder="Enter monthly salary" step="0.01">
              </div>
              <div class="col-3">
                <label for="address" class="field-label">Address</label>
                <textarea id="address" name="address" class="field-textarea" required placeholder="Enter your address"></textarea>
              </div>
            </div>
          </fieldset>

          <div class="form-message" id="error-message"></div>
          <button type="submit" class="form-btn">Login</button>
        </form>
        <div class="form-link">
          <a href="forgot-password.html">Forgot Password?</a>
        </div>
      </div>
    </div>
  </div><!-- Close the .container div -->

  <%- include('../../partials/footer') %>

  <script>
    const form = document.getElementById('employee-login-form');
    const email = document.getElementById('email');
    const phone = document.getElementById('phone');
    const errorMessage = document.getElementById('error-message');

    form.addEventListener('submit', function(event) {
      email.classList.remove('error');
      phone.classList.remove('error');
      errorMessage.textContent = '';

      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailPattern.test(email.value)) {
        event.preventDefault();
        email.classList.add('error');
        errorMessage.textContent = 'Please enter a valid email address.';
        return;
      }

      const phonePattern = /^[0-9]{10}$/;
      if (!phonePattern.test(phone.value)) {
        event.preventDefault();
        phone.classList.add('error');
        errorMessage.textContent = 'Please enter a valid 10-digit phone number.';
        return;
      }

      // Uncomment to allow submission
      // form.submit();
    });
  </script>
</body>
</html>