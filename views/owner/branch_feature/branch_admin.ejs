<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 40px;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
    }

    .content-area p {
      color: #636e72;
      line-height: 1.6;
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .add-btn {
      padding: 10px 20px;
      background: #2d3436;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s;
    }

    .add-btn:hover {
      background: #636e72;
    }

    .clickable-btn {
      background: none;
      border: none;
      color: #2d3436;
      text-decoration: none;
      cursor: pointer;
      padding: 0;
      font-size: inherit;
      text-align: left;
    }

    .clickable-btn:hover {
      color: #636e72;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #e6e9f0;
    }

    th {
      background: #333333;
      color: white;
    }

    tr:nth-child(even) {
      background: #f8f9fd;
    }

    /* Media Query for 768px */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        padding: 0 20px;
      }

      .content-area {
        min-height: auto;
        padding: 15px; /* Reduced padding */
      }

      .header-container {
        flex-direction: column;
        align-items: flex-start;
      }

      .content-area h1 {
        font-size: 1.5rem; /* Slightly smaller heading */
      }

      .add-btn {
        margin-top: 10px;
        padding: 8px 15px; /* Slightly smaller button */
        font-size: 0.9rem;
      }

      table {
        display: block; /* Stack table elements */
        overflow-x: auto; /* Fallback for horizontal scrolling */
      }

      thead, tbody, tr, th, td {
        display: block;
        width: 100%;
      }

      th, td {
        padding: 10px; /* Reduced padding */
        font-size: 0.9rem; /* Slightly smaller text */
      }

      th {
        background: #333333;
        color: white;
        text-align: center; /* Center headers */
      }

      td {
        border-bottom: none; /* Cleaner look */
        padding-left: 50%; /* Indent for pseudo-labels */
        position: relative;
      }

      td::before {
        content: attr(data-label);
        position: absolute;
        left: 10px;
        width: 45%;
        padding-right: 10px;
        font-weight: bold;
        text-align: left;
      }

      .clickable-btn {
        width: 100%; /* Full width for easier clicking */
        text-align: left;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
        <div class="header-container">
          <h1>Our Branches</h1>
          <a href="/admin/branches/add">
            <button class="add-btn">Add Branch</button>
          </a>
        </div>

        <!-- Table to display branch data -->
        <table>
          <thead>
            <tr>
              <th>Branch ID</th>
              <th>Branch Name</th>
              <th>Manager Name</th>
              <th>Manager Email</th>
              <th>Manager Phone</th>
              <th>Address</th>
            </tr>
          </thead>
          <tbody>
            <% branches.forEach(branch => { %>
              <tr>
                <td data-label="Branch ID"><button class="clickable-btn" data-bid="<%= branch.bid %>"><%= branch.bid %></button></td>
                <td data-label="Branch Name"><button class="clickable-btn" data-bid="<%= branch.bid %>"><%= branch.b_name %></button></td>
                <td data-label="Manager Name"><button class="clickable-btn" data-bid="<%= branch.bid %>"><%= branch.manager_name %></button></td>
                <td data-label="Manager Email"><button class="clickable-btn" data-bid="<%= branch.bid %>"><%= branch.manager_email %></button></td>
                <td data-label="Manager Phone"><button class="clickable-btn" data-bid="<%= branch.bid %>"><%= branch.manager_ph_no %></button></td>
                <td data-label="Address"><button class="clickable-btn" data-bid="<%= branch.bid %>"><%= branch.address %></button></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    document.querySelectorAll('.clickable-btn').forEach(button => {
      button.addEventListener('click', () => {
        const bid = button.getAttribute('data-bid');
        window.location.href = `/admin/branches/edit/${bid}`;
      });
    });
  </script>
</body>
</html>