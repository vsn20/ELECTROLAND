<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Branch - ElectroLand</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Page-specific styles */
    .form-container h1 {
      text-align: center;
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/admin_sidebar') %>

    <!-- Content Area -->
    <div class="content-area form-container" id="content">
      <h1>Add Branch</h1>
      <form id="branch-details-form" action="/admin/branches/add" method="POST">
        <fieldset class="form-section">
          <legend class="section-title">Branch Information</legend>
          <div class="field-group">
            <div>
              <label for="branch-name" class="field-label">Branch Name</label>
              <input type="text" id="branch-name" name="b_name" class="field-input" required placeholder="Enter branch name">
            </div>
            <div>
              <label for="address" class="field-label">Address</label>
              <textarea id="address" name="address" class="field-textarea" required placeholder="Enter branch address"></textarea>
            </div>
          </div>
        </fieldset>
        <div id="error-message"></div>
        <button type="submit" class="form-btn">Submit Branch</button>
      </form>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    const form = document.getElementById('branch-details-form');
    const errorMessage = document.getElementById('error-message');

    form.addEventListener('submit', function(event) {
      errorMessage.textContent = '';
    });
  </script>
</body>
</html>