<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0; /* Reset default margin */
            padding: 0; /* Reset default padding */
            min-height: 100vh; /* Ensure body takes at least full viewport height */
            display: flex;
            flex-direction: column; /* Stack children vertically */
            background: #f0f2f5;
        }

        .form-container {
            background: #ffffff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1),
                       0 10px 20px rgba(0, 0, 0, 0.1),
                       0 0 0 1px rgba(0, 0, 0, 0.05);
            width: 100%;
            max-width: 400px;
            margin: auto; /* Center horizontally */
            margin-top: 100px; /* Space below fixed navbar */
        }

        .form-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #34495e;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus {
            outline: none;
            border-color: #1a73e8;
            box-shadow: 0 0 5px rgba(26, 115, 232, 0.3);
        }

        .form-group input.error {
            border-color: #e74c3c;
        }

        .message {
            margin: 0.5rem 0;
            font-size: 0.9rem;
            text-align: center;
            color: #e74c3c; /* Red for error */
        }

        .submit-btn, .otp-btn {
            width: 100%;
            padding: 0.75rem;
            background: linear-gradient(135deg, #34495E, #2C3E50);
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .submit-btn:hover, .otp-btn:hover {
            background: linear-gradient(to right, rgb(66, 32, 70), rgb(30, 26, 71), rgb(77, 38, 44), #155217, #2E8B57);
        }

        .submit-btn:active, .otp-btn:active {
            background: linear-gradient(to left, rgb(66, 32, 70), rgb(30, 26, 71), rgb(77, 38, 44), #155217, #2E8B57);
        }

        /* Back to Login link styling */
        .back-link {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }

        .back-link a {
            color: #1a73e8;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .back-link a:hover {
            color: #1557b0;
            text-decoration: underline;
        }

        /* Hide class */
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="form-container">
        <h2>Forgot Password</h2>
        <form id="reset-form" action="reset-success.html" method="POST">
            <div class="form-group">
                <label for="email">Email ID</label>
                <input type="email" id="email" name="email" required placeholder="Enter your email">
            </div>
            <button type="button" class="otp-btn" id="send-otp-btn">Send OTP</button>

            <!-- OTP and Password Fields (hidden initially) -->
            <div id="reset-fields" class="hidden">
                <div class="form-group">
                    <label for="otp">OTP</label>
                    <input type="text" id="otp" name="otp" required placeholder="Enter the OTP">
                </div>
                <div class="form-group">
                    <label for="new-password">New Password</label>
                    <input type="password" id="new-password" name="new-password" required placeholder="Enter new password">
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" id="confirm-password" name="confirm-password" required placeholder="Confirm new password">
                </div>
                <div class="message" id="password-message"></div>
                <button type="submit" class="submit-btn">Submit</button>
            </div>
        </form>
        <div class="back-link">
            <a href="/login">Back to Login</a>
        </div>
    </div>
    <%- include('partials/footer') %>

    <script>
        // Get form and input elements
        const form = document.getElementById('reset-form');
        const sendOtpBtn = document.getElementById('send-otp-btn');
        const resetFields = document.getElementById('reset-fields');
        const newPassword = document.getElementById('new-password');
        const confirmPassword = document.getElementById('confirm-password');
        const message = document.getElementById('password-message');

        // Handle "Send OTP" button click
        sendOtpBtn.addEventListener('click', function() {
            // Simulate OTP sending (in a real app, this would be an API call)
            setTimeout(() => {
                sendOtpBtn.classList.add('hidden'); // Hide the Send OTP button
                resetFields.classList.remove('hidden'); // Show OTP and password fields
            }, 500); // Simulated delay for effect
        });

        // Handle form submission
        form.addEventListener('submit', function(event) {
            // Clear previous message and error states
            newPassword.classList.remove('error');
            confirmPassword.classList.remove('error');
            message.textContent = '';

            // Check if passwords match (only if reset fields are visible)
            if (!resetFields.classList.contains('hidden') && newPassword.value !== confirmPassword.value) {
                event.preventDefault(); // Prevent form submission
                newPassword.classList.add('error');
                confirmPassword.classList.add('error');
                message.textContent = 'Passwords do not match. Please try again.';
            }
            // If passwords match and OTP is valid (simulated), form submits to reset-success.html
        });
    </script>
</body>
</html>