<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales - Central Branch - ElectroLand</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    body { background: #f5f6fa; min-height: 100vh; display: flex; flex-direction: column; }
    .container { margin-top: 90px; display: flex; flex: 1; gap: 25px; padding: 0 20px; }
    .content-area { background: #ffffff; border-radius: 15px; padding: 20px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); flex: 1; overflow-x: auto; }
    .table-wrapper { overflow-x: auto; -webkit-overflow-scrolling: touch; }
    table { width: 100%; min-width: 600px; border-collapse: separate; border-spacing: 0; background: #ffffff; border-radius: 10px; border: 1px solid #ddd; }
    th, td { padding: 12px; text-align: center; font-size: 1rem; border: 1px solid #eaeaea; vertical-align: middle; }
    th { background: #333; color: white; }
    tr:nth-child(odd) { background: #f8f9fd; }
    tr:nth-child(even) { background: #eef2f7; }
    td { background: inherit; transition: background-color 0.2s ease-in-out; }
    td:hover { background-color: #f0f4f8; cursor: pointer; }
    .header-container { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
    .add-button { padding: 10px 20px; background: #333; color: white; border-radius: 5px; text-decoration: none; cursor: pointer; }
    .add-button:hover { background: #555; }
    .success-message { color: green; margin-bottom: 15px; text-align: center; display: none; }
    .form-container { display: none; margin-top: 20px; }
    .form-group { margin-bottom: 15px; }
    .form-group label { display: block; margin-bottom: 5px; color: #2d3436; font-weight: 500; }
    .form-group input { width: 100%; padding: 8px; border: 1px solid #e6e9f0; border-radius: 5px; font-size: 0.9rem; background: #f8f9fa; color: #2d3436; }
    .form-row { display: flex; gap: 15px; flex-wrap: wrap; }
    .form-row .form-group { flex: 1 1 45%; min-width: 200px; max-width: 400px; }
    .button { padding: 10px 20px; background-color: #333333; color: white; border: none; border-radius: 5px; cursor: pointer; width: 100%; margin-top: 20px; }
    h3 { color: #2d3436; margin: 20px 0 10px; font-size: 1.2rem; }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>
  <div class="container">
    <%- include('../../partials/salesman_sidebar') %>
    <div class="content-area" id="content">
      <div class="header-container">
        <h1>Sales - Central Branch</h1>
        <button class="add-button" onclick="toggleForm()">Add Sale</button>
      </div>
      <div id="successMessage" class="success-message">Sale added successfully!</div>
      <div id="tableWrapper" class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Sale ID</th>
              <th>Price</th>
              <th>Profit</th>
              <th>Sale Date</th>
            </tr>
          </thead>
          <tbody>
            <% salers.forEach(sale => { %>
              <tr onclick="window.location='/salesman/sales/<%= sale.sales_id %>'">
                <td data-label="Sale ID"><%= sale.sales_id %></td>
                <td data-label="Price"><%= sale.amount %></td> <!-- Removed $ -->
                <td data-label="Profit"><%= sale.profit_or_loss %></td> <!-- Removed $ -->
                <td data-label="Sale Date"><%= sale.sales_date %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Add Sale Form -->
      <div id="addSaleForm" class="form-container">
        <form id="saleForm" onsubmit="handleSubmit(event)">
          <h3>Sale Information</h3>
          <div class="form-row">
            <div class="form-group">
              <label>Sale ID</label>
              <input type="text" name="sales_id" required>
            </div>
            <div class="form-group">
              <label>Salesman Name</label>
              <input type="text" name="salesman_name" required>
            </div>
            <div class="form-group">
              <label>Customer Name</label>
              <input type="text" name="customer_name" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Sale Date</label>
              <input type="date" name="sales_date" required>
            </div>
            <div class="form-group">
              <label>Unique Code</label>
              <input type="text" name="unique_code" required>
            </div>
          </div>

          <h3>Product Information</h3>
          <div class="form-row">
            <div class="form-group">
              <label>Product Name</label>
              <input type="text" name="product_name" required>
            </div>
            <div class="form-group">
              <label>Model Number</label>
              <input type="text" name="model_number" required>
            </div>
            <div class="form-group">
              <label>Company Name</label>
              <input type="text" name="company_name" required>
            </div>
          </div>

          <h3>Transaction Details</h3>
          <div class="form-row">
            <div class="form-group">
              <label>Purchased Price</label>
              <input type="number" name="purchased_price" step="0.01" required>
            </div>
            <div class="form-group">
              <label>Sold Price</label>
              <input type="number" name="sold_price" step="0.01" required>
            </div>
            <div class="form-group">
              <label>Quantity</label>
              <input type="number" name="quantity" required>
            </div>
          </div>

          <button type="submit" class="button">Add Sale</button>
        </form>
      </div>
    </div>
  </div>
  <%- include('../../partials/footer') %>

  <script>
    function toggleForm() {
      const form = document.getElementById('addSaleForm');
      const table = document.getElementById('tableWrapper');
      const successMessage = document.getElementById('successMessage');
      
      // Hide table and success message, show form
      table.style.display = 'none';
      successMessage.style.display = 'none';
      form.style.display = 'block';
    }

    function handleSubmit(event) {
      event.preventDefault();
      const form = document.getElementById('saleForm');
      const table = document.getElementById('tableWrapper');
      const successMessage = document.getElementById('successMessage');
      
      // Log form data (for debugging, no backend action)
      const formData = new FormData(form);
      console.log("Form Data:", Object.fromEntries(formData));

      // Hide form, show table and success message
      form.style.display = 'none';
      table.style.display = 'block';
      successMessage.style.display = 'block';

      // Reset form
      form.reset();

      // Hide success message after 3 seconds
      setTimeout(() => {
        successMessage.style.display = 'none';
      }, 3000);
    }
  </script>
</body>
</html>