<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Compose Message - ElectroLand</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #f5f6fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      margin-top: 90px;
      display: flex;
      flex: 1;
      gap: 25px;
      padding: 0 20px !important; /* Standardized padding with !important to prevent override */
      max-width: 100%;
    }

    .content-area {
      background: #ffffff;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      flex: 1;
    }

    .content-area h1 {
      color: #2d3436;
      margin-bottom: 20px;
    }

    .form-row {
      display: flex;
      gap: 20px;
    }

    .form-row .form-group {
      flex: 1;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #2d3436;
      font-weight: 500;
    }

    select, input, textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #e6e9f0;
      border-radius: 5px;
      font-size: 16px;
    }

    textarea {
      min-height: 150px;
      resize: vertical;
    }

    button {
      background: #333333;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background: #555555;
    }

    .branch-fields {
      display: none;
    }
  </style>
</head>
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <%- include('../../partials/salesman_sidebar') %>

    <!-- Content Area -->
    <div class="content-area" id="content">
      <h1>Compose Message</h1>
      <form action="/salesman/messages/compose" method="POST">
        <div class="form-row">
          <div class="form-group">
            <label for="from">From:</label>
            <input type="text" name="from" id="from" value="salesman" readonly>
          </div>
          <div class="form-group">
            <label for="to">To:</label>
            <select name="to" id="to" required>
              <option value="all">All</option>
              <option value="salesmanager">Sales Manager</option>
              <option value="company">Company</option>
              <option value="admin">Admin</option>
              <option value="customer">Customer</option>
            </select>
          </div>
        </div>

        <div class="form-row branch-fields" id="branch-row">
          <div class="form-group">
            <label for="branch_id">Branch ID:</label>
            <input type="text" name="branch_id" id="branch_id" placeholder="Enter Branch ID">
          </div>
          <div class="form-group">
            <label for="branch_name">Branch Name:</label>
            <input type="text" name="branch_name" id="branch_name" placeholder="Enter Branch Name">
          </div>
        </div>

        <div class="form-group">
          <label for="messages">Message:</label>
          <textarea name="messages" id="messages" placeholder="Enter your message here..." required></textarea>
        </div>

        <button type="submit">Send Message</button>
      </form>
    </div>
  </div>

  <%- include('../../partials/footer') %>

  <script>
    const toSelect = document.getElementById('to');
    const branchRow = document.getElementById('branch-row');

    toSelect.addEventListener('change', function() {
      if (this.value === 'all') {
        branchRow.style.display = 'none';
        document.getElementById('branch_id').removeAttribute('required');
        document.getElementById('branch_name').removeAttribute('required');
      } else {
        branchRow.style.display = 'flex';
        document.getElementById('branch_id').setAttribute('required', 'true');
        document.getElementById('branch_name').setAttribute('required', 'true');
      }
    });

    // Initial check on page load
    if (toSelect.value === 'all') {
      branchRow.style.display = 'none';
    }
  </script>
</body>
</html>